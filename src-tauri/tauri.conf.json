{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "VivaSpot Setup Assistant",
  "version": "0.2.2",
  "identifier": "com.vivaspot.setup-assistant",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "VivaSpot Setup Assistant",
        "width": 500,
        "height": 680,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 420,
        "minHeight": 500
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://*.onrender.com https://*.vivaspot.com; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
